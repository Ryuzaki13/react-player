{
	"name": "@ryuzaki13/react-player",
	"version": "3.5.0",
	"description": "A React component for playing a variety of URLs, including file paths, Mux, YouTube, Vimeo, and Wistia",
	"author": "Pete Cook (https://github.com/Ryuzaki13)",
	"license": "MIT",
	"homepage": "https://github.com/Ryuzaki13/react-player",
	"bugs": {
		"url": "https://github.com/Ryuzaki13/react-player/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Ryuzaki13/react-player.git"
	},
	"files": [
		"dist"
	],
	"main": "dist/index.js",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"default": "./dist/*.js"
		}
	},
	"scripts": {
		"clean": "rimraf dist demo coverage",
		"start": "run-p 'types -- -w' 'build:esm -- --watch=forever' 'build:demo -- --watch=forever --servedir=demo'",
		"lint": "biome lint src/*",
		"types": "tsc",
		"build": "run-s types build:*",
		"build:esm": "builder \"src/**/*.*s*\" --outdir=dist --format=esm",
		"prebuild:demo": "rimraf demo && cp -r examples/react/public demo",
		"build:demo": "builder ./examples/react/src/index.js --format=esm --splitting --bundle --outdir=demo --minify",
		"preversion": "run-s lint",
		"version": "auto-changelog -p && git add CHANGELOG.md",
		"prepublishOnly": "npm run build",
		"postpublish": "npm run clean"
	},
	"peerDependencies": {
		"@types/react": "^19",
		"react": "^19",
		"react-dom": "^19"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.2",
		"@types/node": "^20.14.6",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"auto-changelog": "^2.0.0",
		"builder": "file:./scripts/builder",
		"c8": "^8.0.1",
		"codecov": "^3.6.5",
		"cross-env": "^7.0.2",
		"esbuild": "^0.21.5",
		"npm-run-all": "^4.1.5",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"rimraf": "^3.0.2",
		"screenfull": "^5.0.2",
		"typescript": "^5.9.3"
	},
	"auto-changelog": {
		"breakingPattern": "Breaking changes:"
	},
	"sideEffects": [
		"./test/**/*"
	],
	"keywords": [
		"react",
		"react-component"
	]
}
